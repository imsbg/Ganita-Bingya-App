<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Your existing permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GanitaBigyanApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GanitaBigyan"
        tools:targetApi="31">

        <activity
            android:name=".CrashActivity"
            android:exported="false"
            android:label="Crash Report"
            android:theme="@style/Theme.GanitaBigyan" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GanitaBigyan">

            <!-- This is your original launcher intent. It makes the app appear on the home screen. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--
            ====================================================================
            == NEW INTENT FILTER TO HANDLE YOUR WEBSITE URL (ANDROID APP LINK) ==
            ====================================================================
            This block tells Android that your app can open your website's URL.
            The autoVerify="true" tag triggers the automatic verification process.
            -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Scheme must be "https" for automatic verification -->
                <data android:scheme="https" />
                <!-- The domain of your website -->
                <data android:host="ganitabingya.netlify.app" />

                <!-- This specifies the ONLY path that will open the app -->
                <data android:path="/open" />
            </intent-filter>
            <!-- ==================================================================== -->
            <!-- ======================= END OF NEW BLOCK =========================== -->
            <!-- ==================================================================== -->

            <!-- This is your existing filter to open .gba files. Leave it as is. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.gba" />
                <data android:host="*" />
            </intent-filter>
        </activity>
    </application>
</manifest>